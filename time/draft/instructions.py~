import Tkinter as tk

class Instructions(tk.Frame):
    def __init__(self, master, ipath):
        tk.Frame.__init__(self, master)
        self.pack(side = "top", expand = True, fill = "both")

        self.canvas = tk.Canvas(self)
        self.frame = tk.Text(self.canvas)
        self.canvas.create_window(4, 4, window = self.frame, anchor = "nw")
        self.canvas.pack(fill = "both", side = "left", expand = True)

        vscroll = tk.Scrollbar(self, orient = "vertical")
        vscroll.config(command = self.frame.yview)
        vscroll.pack(side = "right", fill = "y", expand = False)
        self.frame.config(yscrollcommand = vscroll.set)

        def on_frame_configure(event):
            self.canvas.config(scrollregion = self.canvas.bbox("all"))

        def on_canvas_configure(event):
            self.canvas.itemconfig("frame",
                                   width = event.width)

        self.frame.bind("<Configure>", on_frame_configure)
        self.canvas.bind("<Configure>", on_canvas_configure)
 
        with open(ipath, "rb") as ifile:
            itext = ifile.read()

        #instructions = tk.Text(self.frame)
        #instructions.pack(side = "top", fill = "y")
        self.frame.insert("0.0", itext)
        print itext
        #instructions.config(state = "disabled")



root = tk.Tk()
Amma = Instructions(root, "instructions_test.txt")
        
